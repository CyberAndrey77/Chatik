<prism:PrismApplication x:Class="Client.App"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:local="clr-namespace:Client"
                        xmlns:prism="http://prismlibrary.com/" >
    <Application.Resources>
        <Button x:Key="sendButton" Height="30px" Width="50px"  Content="Send" Background="AliceBlue"></Button>
        <TextBox x:Key="sendMessage" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
        <Style x:Key ="CreateChat" TargetType="Button">
            <Setter Property="Control.Background" Value="DodgerBlue"/>
            <Setter Property="Control.Foreground" Value="AliceBlue"/>
            <Setter Property="Control.Margin" Value="5 5 5 5"/>

        </Style>
    </Application.Resources>
</prism:PrismApplication>

