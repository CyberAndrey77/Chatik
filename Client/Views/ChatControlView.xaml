<UserControl x:Class="Client.Views.ChatControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Views"
             xmlns:viewModels="clr-namespace:Client.ViewModels" 
             d:DataContext="{d:DesignInstance viewModels:ChatControlViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*" SharedSizeGroup="A"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding ChatName}"/>
        <ListBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" ItemsSource="{Binding MessageViewModels, Mode=OneWay}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="{Binding Column}" Width="Auto">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" FontSize="10px" Content="{Binding Name}"/>
                            <Label Grid.Row="0" Grid.Column="1" FontSize="10px" Content="{Binding Time}"/>
                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" FontSize="15px">
                                <Label.Content>
                                    <TextBlock Text="{Binding  Text}" TextWrapping="Wrap" />
                                </Label.Content>
                            </Label>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Expander Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" ExpandDirection="Left" >
            <ListBox ItemsSource="{Binding Users, Mode=OneWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Label Content="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Expander>
        <Expander Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" ExpandDirection="Right" >
           <Grid>
               <Grid.RowDefinitions>
                   <RowDefinition Height="1*"/>
                   <RowDefinition Height="Auto"/>
                   <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox Grid.Row="0" ItemsSource="{Binding ChatViewModels}" SelectedItem="{Binding SelectedChat}">
                   <ListBox.ItemTemplate>
                       <DataTemplate>
                           <Grid>
                               <Grid.ColumnDefinitions>
                                   <ColumnDefinition Width="*"/>
                                   <ColumnDefinition Width="Auto"/>
                               </Grid.ColumnDefinitions>
                               <Label Grid.Column="0" Content="{Binding Name}"/>
                               <Label Grid.Column="1" Content="{Binding CountUnreadMessages}" />
                           </Grid>
                       </DataTemplate>
                   </ListBox.ItemTemplate>
               </ListBox>

                <Button Grid.Row="1" Content="Новый чат" Height="20" Command="{Binding CreateChatCommand}"/>
                <Button Grid.Row="2" Content="Новый диалог" Command="{Binding CreateDialog}" Height="20"/>
            </Grid>
        </Expander>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding SendText, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Grid.Row="2" Grid.Column="2" Height="30px" Width="50px"  
                Content="Send" Background="AliceBlue" Command="{Binding SendCommand}"
                IsEnabled="{Binding IsButtonEnable}"
        ></Button>
    </Grid>
</UserControl>
